{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":enablePreCommit",
    ":semanticCommits"
  ],
  "timezone": "Europe/London",
  "schedule": [
    "before 6am on monday"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "@me"
  ],
  "reviewers": [
    "@me"
  ],
  "commitMessagePrefix": "fix:",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "dockerfile": {
    "enabled": true
  },
  "pip_requirements": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)requirements.*\\.txt$/",
      "/(^|/)Dockerfile$/"
    ]
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true,
      "major": {
        "enabled": true,
        "commitMessagePrefix": "feat!:",
        "commitMessageSuffix": " (BREAKING)"
      },
      "minor": {
        "enabled": true,
        "commitMessagePrefix": "feat:"
      },
      "patch": {
        "enabled": true,
        "commitMessagePrefix": "fix:"
      }
    },
    {
      "description": "Auto-merge Python base image patch updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "python"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "addLabels": [
        "auto-merge",
        "base-image"
      ]
    },
    {
      "description": "Auto-merge Python base image minor updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "python"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "commitMessagePrefix": "feat:",
      "automerge": true,
      "addLabels": [
        "auto-merge",
        "base-image"
      ]
    },
    {
      "description": "Manual review for Python base image major updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "python"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "commitMessagePrefix": "feat!:",
      "automerge": false,
      "addLabels": [
        "major-update",
        "base-image",
        "needs-review"
      ]
    },
    {
      "description": "Auto-merge GitHub Actions minor and patch updates",
      "matchDatasources": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "addLabels": [
        "auto-merge"
      ]
    },
    {
      "description": "Manual review for GitHub Actions major updates",
      "matchDatasources": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "commitMessagePrefix": "feat!:",
      "automerge": false,
      "addLabels": [
        "major-update",
        "needs-review"
      ]
    },
    {
      "description": "Auto-merge Python package minor and patch updates",
      "matchDatasources": [
        "pypi"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "addLabels": [
        "auto-merge"
      ],
      "commitMessagePrefix": "fix:"
    },
    {
      "description": "Manual review for Python package major updates",
      "matchDatasources": [
        "pypi"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "commitMessagePrefix": "feat!:",
      "automerge": false,
      "addLabels": [
        "major-update",
        "needs-review"
      ]
    },
    {
      "description": "Track mitene_download specifically",
      "matchDatasources": [
        "pypi"
      ],
      "matchPackageNames": [
        "mitene_download"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "addLabels": [
        "auto-merge",
        "mitene-update"
      ],
      "commitMessagePrefix": "feat:"
    }
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 5
}
